{
  "name": "spendly",
  "version": "1.0.0",
  "description": "Personal Finance App for India with UPI Payments",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "build:server": "cd server && npm install --production",
    "start": "cd server && npm start",
    "start:prod": "cd server && NODE_ENV=production npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "deploy": "npm run build && npm run build:server"
  },
  "keywords": ["finance", "upi", "india", "payments"],
  "author": "Spendly Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}